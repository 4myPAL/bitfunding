.container
  .row
    .col-lg-12
      h1.page-header Featured Projects
      .panel.panel-default(ng-repeat="proj in projectsList")
        .panel-heading
            h3.panel-title 
              a(ng-href="/projects/{{proj.name}}") {{proj.name}}
              &nbsp;
              span.text-muted by {{proj.Owner}}
              &nbsp;
              span.label.label-warning Goal : {{proj.amountToRaise}} BTC
              &nbsp;
              span.label.label-success Raised {{proj.amountRaised}} BTC
              span.pull-right
                div.progress
                  .progress-bar.progress-bar-success(style='width: {{100 * proj.amountRaised / proj.amountToRaise}}%;') {{100 * proj.amountRaised / proj.amountToRaise}}%
          .panel-body
            span {{proj.description}}
            br
            br
            span.text-muted
              span Project started 
              b(am-time-ago="proj.dateCreat")
              &nbsp;
              span and finishing in 
              b(am-time-ago="proj.dateEndCampaign")
              &nbsp;
              a.pull-right.btn.btn-default.btn-xs(ng-href="/projects/{{proj.name}}") See project page
