div(ng-include='"components/navbar/navbar.html"')

.container
  .row
    .col-md-12
      h1 Explore projects.
      br
    .col-md-12
      .panel.panel-default(ng-repeat="proj in projectsList")
        .panel-heading
            h3.panel-title 
              i.fa.fa-folder-open.text-muted
              &nbsp;&nbsp;
              a(ng-href="/projects/{{proj.name}}") {{proj.name}}
              &nbsp;
              small.text-muted by {{proj.Owner}}
              span.pull-right
                div.progress
                  .progress-bar.progress-bar-success(style='width: {{100 * proj.amountRaised / proj.amountToRaise}}%;') {{100 * proj.amountRaised / proj.amountToRaise}}%
          .panel-body
            div.row
            .col-lg-8
              span {{proj.description}}
              br
              br
              span.text-muted
                span Project started 
                b(am-time-ago="proj.dateCreat")
                &nbsp;
                span and finishing in 
                b(am-time-ago="proj.dateEndCampaign")
            .col-lg-3.text-right
              div.project-state.well.text-center
                h2.text-success {{proj.amountRaised | toBTC}} BTC
                small raised of {{proj.amountRaised | toBTC}} BTC goal.
              a.project-fund-btn.btn.btn-block.btn-warning(ng-href="/projects/{{proj.name}}") Fund this project.

footer.footer
  .container
  p
    | Angular Fullstack v2.0.13
    = ' | '
    a(href='https://twitter.com/tyhenkel') @tyhenkel
